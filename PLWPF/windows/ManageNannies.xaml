<Window x:Class="PLWPF.ManageNannies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="ManageNannies" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Button Name ="AddMother" Content="Add Nanny" Grid.Row="0"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Add_Nanny_Click" />
        <Button Name="EditNanny" Content="Edit Nanny" Grid.Row="1"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Edit_Nanny_Click" />
        <Button Name="DeleteNanny" Content="Delete Nanny" Grid.Row="2"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Delete_Nanny_Click" />
        <Button Name="ShowAllNannies" Content="Show All Nannies" Grid.Row="3"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Show_All_Nannies_Click" />
    </Grid>

</Window>
