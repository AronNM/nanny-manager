<Window x:Class="PLWPF.windows.ManageChildren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.windows"
        mc:Ignorable="d"
        Title="Manage_Child" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Button Name ="AddChild" Content="Add Child" Grid.Row="0"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Add_Child_Click" />
        <Button Name="EditChild" Content="Edit Child" Grid.Row="1"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Edit_Child_Click" />
        <Button Name="DeleteChild" Content="Delete Child" Grid.Row="2"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Delete_Child_Click" />
        <Button Name="ShowAllChildren" Content="Show All Children" Grid.Row="3"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Show_All_Children_Click" />
    </Grid>

</Window>
