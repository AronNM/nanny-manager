<Window x:Class="PLWPF.windows.ManageContracts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.windows"
        mc:Ignorable="d"
        Title="ManageContracts" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Button Name ="AddContract" Content="Add Contract" Grid.Row="0"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Add_Contract_Click" />
        <Button Name="EditContract" Content="Edit Contract" Grid.Row="1"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Edit_Contract_Click" />
        <Button Name="DeleteContract" Content="Delete Contract" Grid.Row="2"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Delete_Contract_Click" />
        <Button Name="ShowAllContracts" Content="Show All Contracts" Grid.Row="3"  Style="{DynamicResource LargeButtonStyle}"  Margin="10,10,10,10"   Click="Show_All_Contracts_Click" />
    </Grid>

</Window>
